<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/trailer_thumbnail"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:minHeight="64dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/trailer_thumbnail"
        android:layout_alignRight="@id/trailer_thumbnail"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_play_circle_filled_white_white_24dp" />

    <TextView
        android:id="@+id/trailer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/trailer_thumbnail"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Trailer Title" />

</RelativeLayout>